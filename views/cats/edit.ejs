<% include ../partials/header %>
<div class="row justify-content-center">
	<div class="col-md-12 text-center"><h1>Edit <%= cat.name %></h1></div>
	<div class="col-xs-12 col-md-6 col-lg-4">
		<form
			id="edit-cat-form"
			action="/cats/<%= cat._id %>?_method=PUT"
			method="POST"
			enctype="multipart/form-data"
		>
			<div class="form-group">
				<input
					class="form-control"
					type="text"
					name="cat[name]"
					value="<%= cat.name %>"
				/>
			</div>
			<div class="form-group">
				<label for="image">Image</label>
				<input type="file" id="image" name="image" accept="image/*" />
			</div>
			<div class="form-group">
				<input
					class="form-control"
					type="url"
					name="cat[fbLink]"
					value="<%= cat.fbLink %>"
				/>
			</div>
			<div class="form-group">
				<input
					class="form-control"
					type="text"
					name="cat[age]"
					value="<%= cat.age %>"
				/>
			</div>
			<div class="form-group">
				<input
					class="form-control"
					type="text"
					name="cat[dimensions]"
					value="<%= cat.dimensions %>"
				/>
			</div>
			<div class="form-group">
				<textarea
					name="cat[description]"
					cols="70"
					rows="7"
					class="form-control"
					placeholder="Write your description..."
					form="edit-cat-form"
				>
<%= cat.description %></textarea
				>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit</button>
			</div>
		</form>
		<a href="/cats/<%= cat._id %>" class="btn btn-primary btn-sm">Go Back</a>
	</div>
</div>
<% include ../partials/footer %>
