<% include ../partials/header %>
<div class="row justify-content-center">
	<div class="col-md-12 text-center"><h1>Edit <%= dog.name %></h1></div>
	<div class="col-xs-12 col-md-6 col-lg-4">
		<form
			id="edit-dog-form"
			action="/dogs/<%= dog._id %>?_method=PUT"
			method="POST"
			enctype="multipart/form-data"
		>
			<div class="form-group">
				<input
					class="form-control"
					type="text"
					name="dog[name]"
					value="<%= dog.name %>"
				/>
			</div>
			<div class="form-group">
				<label for="image">Image</label>
				<input type="file" id="image" name="image" accept="image/*" />
			</div>
			<div class="form-group">
				<input
					class="form-control"
					type="url"
					name="dog[fbLink]"
					value="<%= dog.fbLink %>"
				/>
			</div>
			<div class="form-group">
				<input
					class="form-control"
					type="text"
					name="dog[age]"
					value="<%= dog.age %>"
				/>
			</div>
			<div class="form-group">
				<input
					class="form-control"
					type="text"
					name="dog[dimensions]"
					value="<%= dog.dimensions %>"
				/>
			</div>
			<div class="form-group">
				<textarea
					name="dog[description]"
					cols="90"
					rows="7"
					class="form-control"
					placeholder="Write your description..."
					form="edit-dog-form"
				>
<%= dog.description %></textarea
				>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit</button>
			</div>
		</form>
		<a href="/dogs/<%= dog._id %>" class="btn btn-primary btn-sm">Go Back</a>
	</div>
</div>
<% include ../partials/footer %>
